<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RelativeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="SELAMAT DATANG"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80sp"
        android:layout_marginTop="10sp"
        android:fontFamily="monospace"
        android:text="Layout ini Dibuat Oleh :"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80sp"

        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:text="Ini merupakan penerapan Layout Relative"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="84dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80sp"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:text="NIM : 2301091029"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="193dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80sp"
        android:fontFamily="monospace"
        android:text="Nama: Yuni Permata Sari"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="164dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80sp"
        android:fontFamily="monospace"
        android:text="Kelas MI2C"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="222dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNama"
        android:layout_marginTop="10dp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0097A7"
        app:cardCornerRadius="15dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="327dp">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:backgroundTint="#0097A7"
            android:ems="10"
            android:hint="Nama"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewNIM"
        android:layout_marginTop="5dp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_below="@id/cardViewNama"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0097A7"
        app:cardCornerRadius="15dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="263dp">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:backgroundTint="#0097A7"
            android:ems="10"
            android:hint="NIM"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button2"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_below="@id/cardViewNIM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:backgroundTint="#5D686A"
        android:text="Registrasi"
        android:textColor="#FFFFFF"
        app:cornerRadius="15dp" />

</RelativeLayout>